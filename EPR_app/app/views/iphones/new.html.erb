<div class="container">
<h1>Add New iPhone Review</h1>

<%= form_for :iphone, url: iphones_path do |f| %>

<div class="form-group">
<%= f.label :profile %><br />
<%= f.select :profile_id, Profile.all.collect {|x| [x.fname, x.id]}, {:include_blank => 'Select Profile'},class: 'form-control' %><br />

<div class="form-group">
<%= f.label :product %><br />
<%= f.select :product_id, Product.all.collect {|x| [x.pname, x.id]}, {:include_blank => 'Select Product'},class: 'form-control' %><br />

<div class="form-group">
<%= f.label :author %>
<%= f.text_field :author %>
</div>

<div class="form-group">
<%= f.label :rating %>
<%= f.number_field :rating %>

<div class="form-group">
<%= f.label :review %>
<%= f.text_area :review %>

<div class="form-group">
<%= f.label :date %>
<%= f.date_field :date %>

<div class="form-group">
<%= f.submit "Submit" %>
	<%=link_to "Cancel", iphones_path %>
</div>
<% end %>
</div>