<div class="container">
<h1>Edit Profile Details</h1>

<%= form_for :profile, url: profiles_path do |f| %>
<div class="form-group">
<%= f.label :fname %>
<%= f.text_field :fname %>
</div>

<div class="form-group">
<%= f.label :lname %>
<%= f.text_field :lname %>
</div>

<div class="form-group">
<%= f.label :date %>
<%= f.date_field :date %>

<div class="form-group">
<%= f.label :address %>
<%= f.text_area :address %>

<div class="form-group">
<%= f.label :city %>
<%= f.text_field :city %>
</div>

<div class="form-group">
<%= f.label :county %>
<%= f.text_field :county %>
</div>

<div class="form-group">
<%= f.label :photo %>
<%= f.file_field :photo %>
</div>

<div class="form-group">
<%= f.submit "Submit" %>
	<%=link_to "Cancel", profiles_path %>
</div>
<% end %>
</div>